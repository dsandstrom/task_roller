<% url = move_task_path(task) %>

<%= form_with(model: task, url: url, local: true, method: :patch,
              html: { name: 'move_task_form' }) do |form| %>
  <%= form_errors(form.object) %>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.grouped_collection_select :project_id,
                                       Category.all, :projects,
                                       :name_and_tag, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
