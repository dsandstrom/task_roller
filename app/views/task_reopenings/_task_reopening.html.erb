<% if can?(:destroy, task_reopening) %>
  <%
    confirm = "Are you sure you want to remove the reopening for "\
              task_reopening.task.heading
  %>

  <p>
    <%= link_to 'remove reopening',
                 task_reopening_path(task_reopening.task, task_reopening),
                 method: :delete, class: 'destroy-link',
                 data: { confirm: confirm } %>
  </p>
<% end %>
