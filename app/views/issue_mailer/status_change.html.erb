<% url = issue_url(@issue) %>

<p>Task Roller Update:</p>

<h1>
  Status for
  <%= link_to "Issue##{ @issue.id}", url, target: '_blank' %>
  changed
</h1>

<p>
  Status: <%= @old_status.titleize %> -> <%= @issue.status.titleize %>
</p>

<p>
  Issue Summary: <%= @issue.summary %>
</p>

<p>
  <%= link_to 'Visit Issue', url, target: '_blank' %>
</p>
