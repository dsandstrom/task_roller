<% if category_task_subscription.persisted? %>
  <% return unless can?(:destroy, category_task_subscription) %>

  <%= link_to ' Tasks',
              category_task_subscription_path(category, category_task_subscription),
              method: :delete,
              class: 'button button-success button-unsubscribe' %>
<% elsif can?(:create, category_task_subscription) %>
  <%= link_to 'Subscribe to Category Tasks',
              category_task_subscriptions_path(category),
              method: :post, class: 'button button-outline' %>
<% end %>
