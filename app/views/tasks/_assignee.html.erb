<% url = user_assignments_path(assignee) %>

<% if can?(:read, assignee) && !current_page?(url) %>
  <%= link_to assignee.name_or_email, url, class: 'task-assignee' %>
<% else %>
  <%= content_tag :span,
              (assignee&.name_or_email || User.destroyed_name),
              class: 'task-assignee' %>
<% end %>
