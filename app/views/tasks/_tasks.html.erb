<% path ||= nil  %>

<div class="tasks">
  <% if tasks.any? || searching? %>
    <%= render 'tasks/filter_form', path: path %>

    <% if tasks.any? %>
      <%= render tasks %>
    <% else %>
      <p class="no-task">None found</p>
    <% end %>
  <% else %>
    <p class="no-task">None yet</p>
  <% end %>
</div>
