<div id="issue-<%= issue.id %>" class="issue">
  <header class="issue-header">
    <%= issue_type_icon_tag(issue.issue_type) %>
    <h3 class="issue-summary">
      <%= link_to issue.summary,
                  category_project_issue_path(issue.category, issue.project, issue) %>
    </h3>
  </header>

  <p class="issue-user"><%= issue.user ? issue.user.name : 'removed' %></p>

  <footer class="issue-footer">
    <%= link_to 'Edit',
                edit_category_project_issue_path(issue.category, issue.project, issue) %>
  </footer>
</div>
