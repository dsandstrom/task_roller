<div id="issue-<%= issue.id %>" class="issue">
  <header class="issue-header">
    <h3 class="issue-summary">
      <%= issue_type_icon_tag(issue.issue_type) %>
      <%= link_to issue.id_and_summary, issue_path(issue) %>
    </h3>
  </header>

  <main class="issue-main">
    <%= issue_status_tags(issue) %>

    <p>
      Opened
      <%= content_tag :strong, format_date(issue.created_at),
                      class: 'issue-dates' %>
      by
      <strong class="issue-user"><%= issue.user ? issue.user.name_or_email : User.destroyed_name %></strong>
      <% if issue.created_at != issue.updated_at %>
        <%= content_tag :span, " (ed. #{format_date(issue.updated_at)})" %>
      <% end %>

      <% if can?(:update, issue) %>
        <%= divider %>
        <%= link_to 'Edit', edit_issue_path(issue) %>
      <% end %>
    </p>
  </main>
</div>
