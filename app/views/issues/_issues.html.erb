<% if issues.any? || searching? %>
  <%= render 'shared/page_links', collection: issues %>
<% end %>

<div class="columns">
  <div class="first-column">
    <% if issues.any? || searching? %>
      <div class="issues">
        <%= render issues %>
      </div>

      <%= render 'shared/simple_page_links', collection: issues %>
    <% else %>
      <p class="no-issue">None yet</p>
    <% end %>
  </div>

  <div class="second-column">
    <% if issues.any? || searching? %>
      <%= render 'issues/filter_form', issues: issues %>
    <% end %>
  </div>
</div>
