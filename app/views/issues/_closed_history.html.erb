<% return if issue.open? %>

<% if issue.resolved? %>
  <%= render 'resolutions/history',
             resolution: issue.current_resolution %>
<% elsif issue.addressed? %>
  <dt>Tasks</dt>
  <%= content_tag :dd,
                  "addressed issue: #{format_date issue.addressed_at}",
                  class: 'issue-addressed-at' %>
<% elsif issue.source_issue_connection %>
  <%= render 'issue_connections/history',
             issue_connection: issue.source_issue_connection %>
<% else %>
  <dt>Reviewer</dt>
  <%= content_tag :dd, "closed issue",
                  class: 'issue-closed' %>
<% end %>
