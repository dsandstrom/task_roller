<%= render 'shared/task', task: task_connection.target %>

<% if can?(:destroy, task_connection) %>
  <%
    confirm = "Are you sure you want to remove the connection to " \
              "\"#{task_connection.target.short_summary}\" and reopen " \
              "this task?"
  %>
  <p>
    <%= link_to 'remove connection and reopen',
                 task_connection,
                 method: :delete, class: 'destroy-link',
                 data: { confirm: confirm } %>
  </p>
<% end %>
