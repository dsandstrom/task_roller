<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? content_for(:title) : 'TaskRoller' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all',
                            'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'flash_messages', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'forms', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'radio_buttons', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main-container">
      <%= render 'layouts/header' %>
      <% flash_messages if defined?(flash_messages) %>

      <main class="main-content">
        <div class="page">
          <%= yield %>
        </div>
      </main>

      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
