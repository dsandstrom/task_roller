<div id="user-detail-<%= @user.id %>" class="user-detail">
  <%= user_header @user %>

  <p class="user-links">
    <% if can?(:destroy, @user) %>
      <%= link_to 'Delete',
                  @user,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'button button-outline destroy-button' %>
    <% end %>
  </p>
</div>
