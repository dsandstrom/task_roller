<div id="user-detail-<%= @user.id %>" class="user-detail">
  <%= breadcrumbs([['Users', users_path]]) %>

  <h1 class="user-name">
    <%= @user.name %>
  </h1>

  <p class="user-email">
    <code><%= @user.email %></code>
  </p>

  <p class=user-links>
    <% if policy(@user).edit? %>
      <%= link_to 'Edit', edit_user_path(@user), class: 'button button' %>
    <% end %>
    <% if policy(@user).destroy? %>
      <%= link_to 'Delete',
                  @user,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'button button-outline destroy-button' %>
    <% end %>
  </p>

  <p><%= link_to 'Back', :back %></p>
</div>
