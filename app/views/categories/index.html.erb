<h1>Categories</h1>

<header class="categories-header">
  <p>
    <%= link_to 'New Category', new_category_path,
                class: 'button button-success' %>
  </p>
</header>

<div class="categories">
  <% if @categories.any? %>
    <%= render @categories %>
  <% else %>
    <p class="no-category">none</p>
  <% end %>
</div>
