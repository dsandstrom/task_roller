<h1><%= @category.name %></h1>

<p><%= link_to 'Categories', categories_path %></p>

<p>
  <%= link_to 'Edit', edit_category_path(@category) %> |
</p>

<p>
  <strong>Visible:</strong>
  <%= @category.visible %>
</p>

<p>
  <strong>Internal:</strong>
  <%= @category.internal %>
</p>

<h2>Projects</h2>
<p><%= link_to 'New Project', new_category_project_path(@category) %></p>

<div class="category-projects">
  <% if @projects.any? %>
    <%= render @projects %>
  <% else %>
    <p>none</p>
  <% end %>
</div>
