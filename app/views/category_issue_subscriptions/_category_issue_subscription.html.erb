<% if category_issue_subscription.persisted? %>
  <% return unless can?(:destroy, category_issue_subscription) %>

  <%= link_to ' Issues',
              category_issue_subscription_path(category, category_issue_subscription),
              method: :delete,
              class: 'button button-success button-unsubscribe' %>
<% elsif can?(:create, category_issue_subscription) %>
  <%= link_to 'Subscribe to Issues',
              category_issue_subscriptions_path(category),
              method: :post, class: 'button button-outline' %>
<% end %>
