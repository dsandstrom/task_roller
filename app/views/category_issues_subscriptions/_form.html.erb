<%
  url =
    if category_issues_subscription.persisted?
      category_issues_subscription_path(category, category_issues_subscription)
    else
      category_issues_subscriptions_path(category)
    end
%>
<%= form_with(model: category_issues_subscription, url: url, local: true,
              html: { name: 'issue_subscription_form',
                      class: 'issue-subscription-form' }) do |form| %>
  <%= form_errors(form.object) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
