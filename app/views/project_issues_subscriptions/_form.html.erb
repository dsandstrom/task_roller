<%
  url =
    if project_issues_subscription.persisted?
      project_issues_subscription_path(project, project_issues_subscription)
    else
      project_issues_subscriptions_path(project)
    end
%>
<%= form_with(model: project_issues_subscription, url: url, local: true,
              html: { name: 'issue_subscription_form',
                      class: 'issue-subscription-form' }) do |form| %>
  <%= form_errors(form.object) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
