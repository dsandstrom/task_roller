<%= content_tag :dt,
                (review.user ? review.user.name_or_email : User.destroyed_name),
                class: 'review-user' %>

<dd id="review_<%= review.id %>" class="review">
  <%= content_tag :span, review.status,
                  class: 'review-status' %>:
  <% unless review.pending? %>
    <%= content_tag :span,
                    format_date(review.updated_at),
                    class: 'review-date' %>
  <% end %>
</dd>
