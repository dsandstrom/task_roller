var notification = document.getElementById("issue_notification-<%= @destroyed_id %>");
if (notification) {
  notification.classList.add('hidden');
}

var issue = document.getElementById("issue-<%= @issue&.id %>");
if (issue) {
  issue.classList.remove('with-notification');
}

var comment = document.getElementById("comment-<%= @issue_comment&.id %>");
if (comment) {
  comment.classList.remove('with-notification');
}
