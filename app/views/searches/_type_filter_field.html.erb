<div class="field">
  <%= label_tag :type %>

  <div id="search_type_labels" class="search-filter-options">
    <%= label_tag :type_all,
                  class: roller_radio_button_label_class('brown') do %>
      <%= radio_button_tag :type, :all,
                           (params[:type] != 'issues' &&
                            params[:type] != 'tasks') %>
      Both
    <% end %>

    <%= label_tag :type_issues,
                  class: roller_radio_button_label_class('brown') do %>
      <%= radio_button_tag :type, :issues,
                           params[:type] == 'issues' %>
      Issues
    <% end %>

    <%= label_tag :type_tasks,
                  class: roller_radio_button_label_class('brown') do %>
      <%= radio_button_tag :type, :tasks,
                           params[:type] == 'tasks' %>
      Tasks
    <% end %>
  </div>
</div>


<% case params[:type] %>
<% when 'issues' %>
  <%= render 'issues/issue_type_filter_field' %>
  <%= render 'issues/status_filter_field' %>
<% when 'tasks' %>
  <%= render 'tasks/task_type_filter_field' %>
  <%= render 'tasks/status_filter_field' %>
<% end %>
