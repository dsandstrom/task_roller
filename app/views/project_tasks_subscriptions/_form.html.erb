<%
  url =
    if project_tasks_subscription.persisted?
      project_tasks_subscription_path(project, project_tasks_subscription)
    else
      project_tasks_subscriptions_path(project)
    end
%>
<%= form_with(model: project_tasks_subscription, url: url, local: true,
              html: { name: 'task_subscription_form',
                      class: 'task-subscription-form' }) do |form| %>
  <%= form_errors(form.object) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
