<div id="project-<%= project.id %>" class="project">
  <%
    category = project.category
    return content_tag(:code, 'ERROR: No Category') unless category
  %>

  <h3><%= project.name %></h3>
  <td><%= project.visible %></td>
  <td><%= project.internal %></td>
  <td><%= project.category.name %></td>
  <td><%= link_to 'Show', category_project_path(category, project) %></td>
  <td><%= link_to 'Edit', edit_category_project_path(category, project) %></td>
  <td><%= link_to 'Destroy', category_project_path(category, project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</div>
